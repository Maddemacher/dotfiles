[bar/master]
monitor=eDP-1
width = 100%
height = 45
lineheight = 3
separator = " "
background = ${colors.background}
foreground = ${colors.foreground}
underline-size = 5
overline-size = 5
font-0 = Hack:size=18
font-1 = FontAwesome:size=18

[bar/top]
inherit = bar/master
modules-left = cpu ram 
modules-center = music workspaces
modules-right = volume wifi battery time

[module/network]
type = internal/network
